  "main": "index.js",
  "scripts": {
    "postinstall": "if [ -s node_modules/.bin/patch-package ]; then patch-package; fi",
    "test:unit": "vitest",
    "test:unit:coverage": "vitest --coverage.enabled --coverage.perFile --coverage.provider=c8 --coverage.reporter=html --coverage.reporter=text",
    "test:unit:ci": "vitest run",
    "test:unit:ci:coverage": "vitest run --reporter=default --reporter=html --outputFile.html=./reports/unit-tests/index.html --reporter=junit --outputFile.junit=./reports/unit-tests-junit.xml --coverage.enabled --coverage.all --coverage.provider=c8 --coverage.reporter=html --coverage.reportsDirectory=./reports/unit-tests-coverage --coverage.reporter=text"
  },
